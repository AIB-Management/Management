<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdaib.mapper.NavigationExtMapper">

    <!--帐号是否存在-->
    <select id="selectCountByParent" parameterType="Integer" resultType="Integer">
        SELECT count(*) FROM `t_navigation` WHERE parent = #{parent}
    </select>

    <select id="selectNavigationByDepartmentIdAndParent" parameterType="Integer" resultType="Navigation">
        SELECT * FROM `t_navigation` WHERE parent = #{parent} AND departmentId=#{departmentId}
    </select>


    <update id="upExtendByParent" parameterType="int">
        UPDATE `t_navigation` SET
        extend = 1
        WHERE parent = #{parent}
    </update>

</mapper>